@model DbFirst.Models.tblProduct

@{ 
    ViewBag.Title = "Details";
}

<h3>Product Details</h3>

<table border="1">
    <tr>
        <td>Product Id</td>
        <td>@Model.ProductId</td>
    </tr>
    <tr>
        <td>Product Name</td>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <td>Product Price</td>
        <td>@Model.ProductPrice</td>
    </tr>
</table>

<br/>
@Html.ActionLink("Back to product list", "Index", new { id=Model.Category_CategoryId})
